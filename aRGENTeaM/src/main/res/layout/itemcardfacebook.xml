<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#565049"
            android:textStyle="bold"
            android:layout_marginStart="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <ImageView
            android:id="@+id/imageface"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
              android:layout_gravity="center"
            android:contentDescription="@string/stubportrait"
            android:scaleType="fitCenter"
            android:src="@drawable/stubportrait"

            />

        <TextView
            android:id="@+id/descripcionface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="#565049"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fechaface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="end"
            android:textSize="12sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
